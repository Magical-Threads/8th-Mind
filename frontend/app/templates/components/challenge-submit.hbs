<div class="form-group">
	<label for="title">Title</label>
	{{input name="title" type="text" value=submissionTitle}}
</div>
<div class="form-group">
	<label for="caption">Caption</label>
	{{input name="caption" type="text" value=assetCaption}}
</div>
<div class="form-group">
	{{upload-field url=assetUploadURL extraData=assetCaptionData
		fileParamName='assetfile' ajaxSettings=ajaxSettings
		success=(action 'uploadSuccess' store) error=(action 'uploadError')
		preAction=(action 'beforeUpload' store)
	}}
</div>

<!-- <button id="button-submit" {{!action 'createSubmission' store}}
	type="button" class="button button-teal hidden">Submit</button> -->
<ul>
{{#each errors as |err|}}
	<li>{{#if err.title}}{{err.title}}{{else}}{{err}}{{/if}}</li>
{{/each}}
</ul>
