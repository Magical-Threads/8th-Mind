<div class='post-thumb'>

	{{#if article.tag}}
		<span class='post-tag {{category-tag-class article.tag}}'>
			<a href='{{category-href article.tag}}'>{{category-tag article.tag}}</a>
		</span>
	{{/if}}

	{{#link-to 'article' article.articleID }}
		<figure style='background-image: url({{serverURL}}storage/articles/{{article.image}})'></figure>
	{{/link-to}}
</div>

{{#if article.tag}}
	<span class='post-type'>
		<a href='{{category-href article.tag}}'>
			{{category-view-all-text article.tag}}
		</a>
	</span>
{{/if}}

<span class='post-author' desktop>By {{change-author-name article.articleID 22 23}}</span>

<div class='post-text'>
	<h2 class='post-title'>
		{{#link-to 'article' article.articleID }}
			{{article.title}}
		{{/link-to}}
	</h2>
	
	{{#if article.body}}
		<p class='post-desc'>{{{short-desc article.body len='140'}}}</p>
	{{/if}}
	
	<span class='post-author' mobile>By {{change-author-name article.articleID 22 23}}</span>
	
</div>
